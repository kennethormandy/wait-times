<?xml version="1.0" encoding="UTF-8" ?>

    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.wait-times"
        version     = "0.1.0" >

    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />

    <!-- Plugins -->
    <gap:plugin name="nl.x-services.plugins.launchmyapp" version="3.1.1">
      <param name="URL_SCHEME" value="..." />
    </gap:plugin>

    <preference name="orientation" value="portrait" />

    <!-- iOS specific -->
    <preference name="deployment-target" value="6.0" />

    <!-- Android specific -->
    <preference name="android-minSdkVersion" value="16" />

    <name>Wait Times</name>

    <description>
        How long is the wait at the emergency room?
    </description>

    <author href="https://kennethormandy.com" email="hello@kennethormandy.com">
        Kenneth Ormandy
    </author>

</widget>
